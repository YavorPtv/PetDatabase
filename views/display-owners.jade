extends layout

block content
  table.table.table-bordered
    thead.table-light
      tr
        th(scope='col') #
        th(scope='col') Name
        th(scope='col') Age
        th(scope='col') City
        th(scope='col') Delete
        th(scope='col') Edit
    tbody
      each owner in data
        tr
          th(scope='row')= owner.Id
          td= owner.Name
          td= owner.Age
          td= owner.City
          td(style = 'text-align: center;')
            a(href='/owners/' + owner.Id + '/delete') Delete
          td(style = 'text-align: center;')
            a(href='/owners/' + owner.Id + '/edit') Edit
